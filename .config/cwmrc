# Theme Settings
borderwidth 0
color activeborder "#073642"
color inactiveborder "#002B36"
color groupborder "002B36"
color ungroupborder "002B36"
color menubg "#002B36"
color menufg "#93A1A1"
color font "#93A1A1"
color selfont "#002B36"

# Set Font
fontname "SF Pro Display:size=13"

# Turn on sticky-group mode
sticky yes

# Keybindings
# (firstly unbind the defaults - I am not quite a fan)
# C = Control, M = ALT, S = Shift, 4 = Mod4 (Windows Key)
unbind-key CMS-q
unbind-key CM-f
unbind-key CMS-r
unbind-key C-slash
unbind-key M-h
unbind-key M-j
unbind-key M-k
unbind-key M-l
unbind-key all

ignore stalonetray
ignore lemonbar
autogroup 0 stalonetray
autogroup 0 lemonbar
gap 0 0 0 0

moveamount 20
bind-key 4-Return "kitty"
bind-key 4-d      "rofi -modi drun -show drun -show-icons"
bind-key 4-r      "rofi -modi run -show run -show-icons"

bind-key 4M-n window-menu-label
bind-key C4-slash menu-cmd
bind-key 4-slash menu-window
bind-key 4-BackSpace window-hide
